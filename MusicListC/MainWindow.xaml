<Window x:Class="MusicListC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicListC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="MusicList" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,20,0,0"/>

        <StackPanel Name="ButtonsPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,100,0,0">
            <Button Content="Rock" Click="Button_Genre_Click" Tag="Rock"/>
            <Button Content="Pop" Click="Button_Genre_Click" Tag="Pop"/>
            <Button Content="Hip Hop" Click="Button_Genre_Click" Tag="HipHop"/>
            <Button Content="Electronic" Click="Button_Genre_Click" Tag="Electronic"/>
        </StackPanel>

        <ListBox Name="ListBoxSongs" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0"/>
    </Grid>
</Window>